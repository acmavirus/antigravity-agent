{
    "name": "antigravity-agent",
    "displayName": "Antigravity Agent",
    "description": "Quản lý Tài khoản, Giám sát Hạn mức & Tự động Kích hoạt AI Intelligence.",
    "version": "1.0.0",
    "publisher": "AcmaTvirus",
    "icon": "resources/logo.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "antigravity-explorer",
                    "title": "Antigravity Agent",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "antigravity-explorer": [
                {
                    "id": "antigravity-dashboard",
                    "type": "webview",
                    "name": "Dashboard"
                }
            ]
        },
        "commands": [
            {
                "command": "antigravity.refreshQuota",
                "title": "Antigravity: Refresh Quota",
                "icon": "$(refresh)"
            },
            {
                "command": "antigravity.addAccount",
                "title": "Antigravity: Add Account",
                "icon": "$(add)"
            },
            {
                "command": "antigravity.toggleAutoAccept",
                "title": "Antigravity: Toggle Auto-Accept",
                "icon": "$(check)"
            }
        ],
        "keybindings": [
            {
                "command": "antigravity.toggleAutoAccept",
                "key": "ctrl+alt+shift+u",
                "when": "activeEditor"
            }
        ],
        "configuration": {
            "title": "Antigravity Agent",
            "properties": {
                "antigravity.updateInterval": {
                    "type": "integer",
                    "default": 300,
                    "description": "Khoảng thời gian cập nhật hạn mức (giây)."
                },
                "antigravity.language": {
                    "type": "string",
                    "default": "vi",
                    "enum": [
                        "vi",
                        "en",
                        "zh",
                        "ru",
                        "ja"
                    ],
                    "description": "Ngôn ngữ hiển thị."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/node-cron": "^3.0.11",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "eslint": "^8.39.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.44",
        "async-mutex": "^0.4.0",
        "axios": "^1.13.4",
        "node-cache": "^5.1.2",
        "node-cron": "^3.0.2",
        "protobufjs": "^8.0.0"
    }
}